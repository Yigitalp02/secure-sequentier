<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Secure Sequentier</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.2.0/crypto-js.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="FileQueue" asp-action="Index">
                    <i class="bi bi-shield-lock-fill me-2 text-primary"></i>
                    <span>Secure Sequentier</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FileQueue" asp-action="Index">
                                <i class="bi bi-upload me-1"></i> <span data-i18n="nav.signFiles">Sign Files</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FileQueue" asp-action="Verify">
                                <i class="bi bi-patch-check me-1"></i> <span data-i18n="nav.verify">Verify</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FileQueue" asp-action="HashCalculator">
                                <i class="bi bi-hash me-1"></i> <span data-i18n="nav.hash">Hash Calculator</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FileQueue" asp-action="History">
                                <i class="bi bi-clock-history me-1"></i> <span data-i18n="nav.history">History</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FileQueue" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i> <span data-i18n="nav.about">About</span>
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        <!-- Language Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                                    id="langDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-globe me-1"></i> <span id="currentLangLabel">EN</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown" id="langMenu">
                                <!-- Populated by JS -->
                            </ul>
                        </div>
                        <!-- Dark mode toggle -->
                        <button id="themeToggle" class="btn btn-outline-secondary btn-sm" title="Toggle dark mode">
                            <i class="bi bi-moon-fill" id="themeIcon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-3 mt-5">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - Yiğit Alp Bilgin</span>
            <span class="small">
                <i class="bi bi-shield-lock me-1"></i> Secure Sequentier
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/i18n.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // ─── Dark mode toggle ───
        (function() {
            const html = document.documentElement;
            const btn = document.getElementById('themeToggle');
            const icon = document.getElementById('themeIcon');
            const saved = localStorage.getItem('theme') || 'light';

            html.setAttribute('data-bs-theme', saved);
            updateIcon(saved);

            btn.addEventListener('click', () => {
                const current = html.getAttribute('data-bs-theme');
                const next = current === 'dark' ? 'light' : 'dark';
                html.setAttribute('data-bs-theme', next);
                localStorage.setItem('theme', next);
                updateIcon(next);
            });

            function updateIcon(theme) {
                icon.className = theme === 'dark'
                    ? 'bi bi-sun-fill'
                    : 'bi bi-moon-fill';
            }
        })();

        // ─── Language dropdown ───
        (function() {
            var langs = I18N.getLangs();
            var menu = document.getElementById('langMenu');
            var label = document.getElementById('currentLangLabel');
            var current = I18N.getLang();

            // Set label
            label.textContent = current.toUpperCase();

            // Build dropdown items
            Object.keys(langs).forEach(function(code) {
                var li = document.createElement('li');
                var a = document.createElement('a');
                a.className = 'dropdown-item' + (code === current ? ' active' : '');
                a.href = '#';
                a.textContent = langs[code].flag + ' ' + langs[code].name;
                a.addEventListener('click', function(e) {
                    e.preventDefault();
                    I18N.setLang(code);
                    label.textContent = code.toUpperCase();
                    // Update active state
                    menu.querySelectorAll('.dropdown-item').forEach(function(item) {
                        item.classList.remove('active');
                    });
                    a.classList.add('active');
                });
                li.appendChild(a);
                menu.appendChild(li);
            });
        })();
    </script>
    <script>
        $(function(){
          function refreshHistory(){
            const open = [];
            $('#historyContainer .collapse.show')
              .each((_,el)=>open.push(el.id));

            $('#historyContainer')
              .load(window.location.href + ' #historyContainer > *',()=>{
                open.forEach(id=>$('#'+id).collapse('show'));
                I18N.apply();
              });
          }
          setInterval(refreshHistory,5000);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
